<Window x:Class="Intrface.Students.AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intrface.Students"
        mc:Ignorable="d"
        Title="AddStudent" Height="600" Width="800" WindowStartupLocation="CenterScreen"
                    Background="white">

    <Window.Resources>
        <Style x:Key="PopupButtonStyle" >
            <Setter Property="Control.Background" Value="#4267B2"/>
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.FontSize" Value="16"/>
            <Setter Property="Control.Padding" Value="15,8"/>
        </Style>
    </Window.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4267B2" Margin="10 0 " CornerRadius="10">
            <Grid>
                <Button HorizontalAlignment="Left" 
                 Margin="20,0,0,0"
                 Width="40" Height="40"
                 Background="Transparent"
                 BorderThickness="0" Click="BackToLastScreen">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="40" Height="40" Fill="White" Margin="-2,-2,0,0"/>
                            <Polyline Points="27,15 15,20 27,27  " StrokeThickness="2" Stroke="#4267B2" Margin="-2,-2,2,2" />
                        </Grid>
                    </Button.Content>
                </Button>

                <TextBlock x:Name="HeaderText" Text="Arak"
                  Foreground="White"
                  FontSize="36"
                  FontWeight="Bold"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                 Margin="0,0,20,0"
                 Background="White"
                 CornerRadius="15" Height="35"
                 Padding="10,5">
                    <Button Click="BackButtonClick" Foreground="#4267B2" 
                     BorderBrush="Transparent" Background="Transparent" 
                     FontSize="16" FontWeight="Bold" >Home</Button>
                </Border>
            </Grid>
        </Border>

        <!-- Form Content -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column - Student Info -->
            <StackPanel Grid.Column="1">
                <!-- Student Basic Info -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Name -->
                    <TextBlock  Text="Name:" Grid.Row="0" Grid.Column="0" 
                         FontSize="24" Foreground="#FF4E4C4C" Margin="0,0,20,15" FontWeight="Bold"
                         VerticalAlignment="Center" />
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="Name"
                       Height="35" Background="#FFEBEBEB" FontSize="17" FontWeight="Medium"
                       Margin="0,0,0,15" BorderThickness="0"/>

                    <!-- Age -->
                    <TextBlock  Text="Age:" Grid.Row="1" Grid.Column="0" 
                         FontSize="24" Foreground="#FF4E4C4C" Margin="0,0,20,15" FontWeight="Bold"
                         VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="Age" 
                       Height="35" Background="#FFEBEBEB" FontSize="17" FontWeight="Medium"
                       Margin="0,0,0,15" BorderThickness="0"/>

                    <!-- Address -->
                    <TextBlock  Text="Address:" Grid.Row="2" Grid.Column="0" 
                         FontSize="24" Foreground="#FF4E4C4C" Margin="0,0,20,15" FontWeight="Bold"
                         VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="Address" 
                       Height="35" Background="#FFEBEBEB" FontSize="17" FontWeight="Medium"
                       Margin="0,0,0,15" BorderThickness="0"/>

                    <!-- Phone -->
                    <TextBlock   Text="Phone:" Grid.Row="3" Grid.Column="0" 
                         FontSize="24" Foreground="#FF4E4C4C" Margin="0,0,20,15" FontWeight="Bold"
                         VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="Phone"
                       Height="35" Background="#FFEBEBEB" FontSize="17" FontWeight="Medium"
                       Margin="0,0,0,15" BorderThickness="0"/>


                </Grid>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,160,0,0"  HorizontalAlignment="Center">
                    <Button Content="Add Student" FontSize="16" FontWeight="Medium"
                        Background="#4267B2" Foreground="White" 
                        Height="40" Width="120" Margin="0,0,15,0" Click="AddNewStudent_Click"/>
                    <Button Content="Cancel" FontSize="16" FontWeight="Medium" Name="CancelAddStudent"
                        Background="#4267B2" Foreground="White" Click="BackToLastScreen"
                        Height="40" Width="100"/>
                </StackPanel>
            </StackPanel>
            <!--Confirmation PopUp-->
            <Popup IsOpen="False" Placement="Center" x:Name="ConfirmationPopUp"  >
                <Grid  Background="#FFF4F4F4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Text="Are you sure to ADD this student?"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Margin="20" Foreground="#FF392F2F"/>



                    <StackPanel Grid.Row="2" Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,20">
                        <Button Content="Yes" Click="ConfirmAddStudent_PupUp"
                            Margin="10,0"
                            Style="{StaticResource PopupButtonStyle}"/>
                        <Button Content="Cancel" Click="CancelAddStudent_PupUp"
                            Margin="10,0"
                            Style="{StaticResource PopupButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Popup>
              <Popup IsOpen="False" Placement="Center" x:Name="ImagePopUp"  >
                        <Grid  Background="#FFF4F4F4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                   Text="You Can upload a photo for this student, Would you like to do?"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Margin="20" Foreground="#FF392F2F"/>



                            <StackPanel Grid.Row="2" Grid.Column="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,20">
                        <Button x:Name="UploadPupUp" Content="Upload" Click="UploadPupUp_Click"
                                    Margin="10,0"
                                    Style="{StaticResource PopupButtonStyle}"/>
                                   <Button Content="Skip" Click="Skip_Click"
                                    Margin="10,0"
                                    Style="{StaticResource PopupButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Popup>

            <!-- Right Column - Image Upload and Parent Info -->
            <StackPanel  Margin="0,0,60,0">
                <!-- Image Upload Section -->
                <Border Background="#F0F0F0" Width="200" Height="200" 
                    HorizontalAlignment="Left" Margin="0,0,0,10" >
                    <Image x:Name="StudentImage" Width="200" Height="200" Stretch="Fill"></Image>
                </Border>
                <Border  BorderBrush="#4267B2" Margin="0,0,0,40"  Width="108.5" BorderThickness="1.2" CornerRadius="10" HorizontalAlignment="Left">
                    <Button Content="Upload Image" Background="Transparent" Name="UploadImage"
                             Foreground="#4267B2" FontWeight="Medium" Click="UploadImage_Click"  BorderThickness="0" Padding="15,5"/>
                </Border>

                <!-- Parent Info Section -->
                <TextBlock Text="Parent" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                <Grid Margin="20 0 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Parent Name -->
                    <TextBlock  Text="Name:" Grid.Row="0" Grid.Column="0" FontSize="18" FontWeight="Medium" Foreground="#FF4E4C4C"
                         Margin="0,0,20,15" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="ParentName"
                       Height="35" Background="#F0F0F0" FontSize="14" 
                       Margin="0,0,0,15" BorderThickness="0"/>

                    

                    <!-- Parent Phone -->
                    <TextBlock Text="Phone:" Grid.Row="2" Grid.Column="0" FontSize="18" FontWeight="Medium" Foreground="#FF4E4C4C"
                         Margin="0,0,20,15" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="ParentPhone" 
                       Height="35" Background="#F0F0F0" FontSize="14"
                       Margin="0,0,0,15" BorderThickness="0"/>
                </Grid>
            </StackPanel>
        </Grid>
        
    </Grid>

</Window>
