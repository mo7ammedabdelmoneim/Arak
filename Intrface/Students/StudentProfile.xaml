<Window x:Class="Intrface.Students.StudentProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intrface.Students"
        mc:Ignorable="d"
        Title="StudentProfile" Height="620" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="white">
    <Window.Resources>
        <Style x:Key="PopupButtonStyle" >
            <Setter Property="Control.Background" Value="#4267B2"/>
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.FontSize" Value="16"/>
            <Setter Property="Control.Padding" Value="15,8"/>
        </Style>
    </Window.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4267B2" Margin="10,0,10,0" CornerRadius="10" Grid.ColumnSpan="2">
            <Grid>
                <Button HorizontalAlignment="Left" 
                      Margin="20,0,0,0"
                      Width="40" Height="40"
                      Background="Transparent"
                      BorderThickness="0" Click="BackToLastScreen">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="40" Height="40" Fill="White" Margin="-2,-2,0,0" HorizontalAlignment="Left"/>
                            <Polyline Points="27,15 15,20 27,27  " StrokeThickness="2" Stroke="#4267B2" Margin="-2,-2,2,2" />
                        </Grid>
                    </Button.Content>
                </Button>

                <TextBlock x:Name="HeaderText" Text="Arak"
                       Foreground="White"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                      Margin="0,0,20,0"
                      Background="White"
                      CornerRadius="15" Height="35"
                      Padding="10,5">
                    <Button Click="BackButtonClick" Foreground="#4267B2" 
                          BorderBrush="Transparent" Background="Transparent" 
                          FontSize="16" FontWeight="Bold" >Home</Button>
                </Border>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section -->
            <StackPanel>
                <!-- Student Image -->
                <StackPanel Orientation="Horizontal">
                    <Border Background="#F0F0F0" Width="200" Height="200" 
                            HorizontalAlignment="Left" Margin="0,0,0,20">
                        <Image Stretch="Fill" Name="StudentImage" />
                    </Border>
                    <Border x:Name="UploadBorder" Visibility="Hidden" BorderBrush="#4267B2" Margin="10,0,0,20"  Width="95.5" BorderThickness="1" CornerRadius="10" VerticalAlignment="Bottom">
                        <Button Content="Upload Image" Background="Transparent" Name="UploadImage" Click="UploadImage_Click"
                            Foreground="#4267B2"  FontSize="11"  BorderThickness="0" Padding="3"/>
                    </Border>
                </StackPanel>

                <!-- Student Info -->
                <StackPanel Margin="20 0 0 0">
                    <TextBlock x:Name="StudentName" Text="Student Name" Foreground="Gray" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>
                    <TextBlock x:Name="StudentGrade"       Text="Grade"        Foreground="Gray" FontSize="15" FontWeight="Medium" Margin="0 0 0 10"/>
                    <TextBlock x:Name="StudentAge"         Text="Age"          Foreground="Gray" FontSize="15" FontWeight="Medium" Margin="0 0 0 10" />
                    <TextBlock x:Name="StudentAddress"     Text="Address"      Foreground="Gray" FontSize="15" FontWeight="Medium" Margin="0 0 0 10"/>
                    <TextBlock x:Name="StudentPhone"       Text="Phone"        Foreground="Gray" FontSize="15" FontWeight="Medium" Margin="0 0 0 10"/>
                </StackPanel>

                
            </StackPanel>

            <!-- Right Section -->
            <StackPanel Grid.Column="1">
                <!-- Parent Info -->
                <StackPanel Margin=" 0 0 0 30">
                    <TextBlock Text="Parent" FontSize="26" Margin="0,0,0,10"/>
                    <StackPanel Margin="20 0 0 0">
                        <TextBlock Name="ParentName"  Text="Name"  Foreground="Gray" FontSize="15" FontWeight="Medium"/>
                        <TextBlock Name="ParentPhone" Text="Phone" Foreground="Gray" FontSize="14" Margin="0 10 0 0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Attendance -->
                <StackPanel>
                    <TextBlock Text="Attendance" FontSize="26" Margin="0,0,0,10"/>
                    <StackPanel Margin="20 0 0 0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Sessions in month: " Foreground="Gray" FontSize="13" Margin="0 0 0 8"/>
                            <TextBlock x:Name="SessionsInMonth" Text="00" Foreground="#4267B2" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Sessions in term: " Foreground="Gray" FontSize="13" Margin="0 0 0 8"/>
                            <TextBlock x:Name="SessionsInTerm" Text="00" Foreground="#4267B2"  FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Absence days: " Foreground="Gray" FontSize="13" Margin="0 0 0 8"/>
                            <TextBlock x:Name="AbsenceDays" Text="00" Foreground="#4267B2"  FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Attendance percentage: " Foreground="Gray" FontSize="13" Margin="0 0 0 8"/>
                            <TextBlock x:Name="AttendancePercentage" Text="00" Foreground="#4267B2"  FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Courses -->
                <StackPanel>
                    <TextBlock Text="Courses" FontSize="26" Margin="0,0,0,11"/>
                    <StackPanel Margin="20 0 0 0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock  Text="Braille: " Foreground="Gray" FontSize="13" Margin="0 0 0 8"/>
                            <TextBlock Name="Braille"       Text="00"         Foreground="#4267B2"  FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Arabic: " Foreground="Gray" FontSize="13" Margin="0 0 0 8"/>
                            <TextBlock Name="Arabic"  Text="00"        Foreground="#4267B2"  FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="English: " Foreground="Gray" FontSize="13" Margin="0 0 0 8"/>
                            <TextBlock Name="English"  Text="00"          Foreground="#4267B2"  FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="DifferentSubject" Text="Subject4: " Foreground="Gray"/>
                            <TextBlock Name="Subject4"  Text="00"          Foreground="#4267B2"  FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!--Confirmation PopUp-->
        <Popup IsOpen="False" Placement="Center" x:Name="ConfirmationPopUp"  >
            <Grid  Background="#FFF4F4F4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" 
               Text="Are you sure to REMOVE this student?"
               FontSize="22"
               FontWeight="SemiBold"
               Margin="20" Foreground="#FF392F2F"/>

               
              
                <StackPanel Grid.Row="2" Grid.Column="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,20,0,20">
                    <Button Content="Remove" Click="ConfirmRemoveStudent"
                Margin="10,0"
                Style="{StaticResource PopupButtonStyle}"/>
                    <Button Content="Cancel" Click="CancelRemoveStudent"
                Margin="10,0"
                Style="{StaticResource PopupButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Popup>
    </Grid>
</Window>
