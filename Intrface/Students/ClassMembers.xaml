<Window x:Class="Intrface.Students.ClassMembers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intrface.Students"
        mc:Ignorable="d"
        Title="ClassMembers" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="white" >
    <Window.Resources>
        <Style x:Key="SearchBtnkey">
            <Style.Setters>
                <Setter Property="Control.Foreground"  Value="#4267B2" ></Setter>
                <Setter Property="Control.Background"  Value="Transparent" ></Setter>
                <Setter Property="Control.FontSize"  Value="24" ></Setter>
                <Setter Property="Control.FontWeight"  Value="Bold" ></Setter>
            </Style.Setters>
        </Style>
        <Style x:Key="SearchBtnBorderkey">
            <Style.Setters>
                <Setter Property="Control.Foreground"  Value="#4267B2" ></Setter>
                <Setter Property="Control.Background"  Value="Transparent" ></Setter>
                <Setter Property="Control.FontSize"  Value="24" ></Setter>
                <Setter Property="Control.FontWeight"  Value="Bold" ></Setter>
            </Style.Setters>
        </Style>
        <Style  x:Key="BtnKey">
            <Style.Setters>
                <Setter Property="Control.Foreground" Value="white"></Setter>
                <Setter Property="Control.Background" Value="Transparent"></Setter>
            </Style.Setters>
        </Style>
        <Style  x:Key="BorderKey">
            <Style.Setters>
                <Setter Property="Control.BorderBrush" Value="Transparent"></Setter>
                <Setter Property="Control.BorderThickness" Value="0"></Setter>
                <Setter Property="Control.Background" Value="#4267B2"></Setter>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="Control.IsMouseOver" Value="True">
                    <Setter Property="Control.Background" Value="White"></Setter>
                    <Setter Property="Control.BorderThickness" Value="1.5"></Setter>
                    <Setter Property="Control.BorderBrush" Value="#4267B2"></Setter>
                    <Setter Property="Control.Foreground" Value="#4267B2"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style  x:Key="textBlockkey">
            <Style.Setters>
                <Setter Property="Control.Foreground" Value="White"></Setter>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="Control.IsMouseOver" Value="True">
                    <Setter Property="Control.Foreground" Value="#4267B2"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4267B2" Margin="10,0,10,0" CornerRadius="10" Grid.ColumnSpan="2">
            <Grid>
                <Button HorizontalAlignment="Left" 
                 Margin="20,0,0,0"
                 Width="40" Height="40"
                 Background="Transparent"
                 BorderThickness="0" Click="BackToLastScreen">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="40" Height="40" Fill="White" Margin="-2,-2,0,0" HorizontalAlignment="Left"/>
                            <Polyline Points="27,15 15,20 27,27  " StrokeThickness="2" Stroke="#4267B2" Margin="-2,-2,2,2" />
                        </Grid>
                    </Button.Content>
                </Button>

                <TextBlock x:Name="HeaderText" Text="Aark"
                  Foreground="White"
                  FontSize="36"
                  FontWeight="Bold"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                 Margin="0,0,20,0"
                 Background="White"
                 CornerRadius="15" Height="35"
                 Padding="10,5">
                    <Button Click="BackButtonClick" Foreground="#4267B2" 
                     BorderBrush="Transparent" Background="Transparent" 
                     FontSize="16" FontWeight="Bold" >Home</Button>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->

        <StackPanel Grid.Row="1" Margin="20,20,20,20" >
            <!-- Students List -->
            <TextBlock Text="Students:" FontSize="35" FontWeight="Medium" Margin="0,0,0,20"/>

            <Grid>
                <!-- Left Side - Student List -->
                <StackPanel Margin="40 0 0 0 ">
                    <ListView x:Name="ListOfStudents" Grid.Column="0"  HorizontalAlignment="Left" ScrollViewer.VerticalScrollBarVisibility="Hidden"
                    SelectedIndex="0" BorderThickness="0" d:ItemsSource="{d:SampleData ItemCount=5}"  BorderBrush="White"   Height="400" SelectionChanged="ListOfStudents_SelectionChanged">
                        <ListView.ItemTemplate  >
                            <DataTemplate>
                                <Grid  Margin=" 0 10" Width="400" >
                                    <StackPanel  HorizontalAlignment="Right">
                                        <TextBlock x:Name="StudentInfoIdentifier" Text="{Binding Name}" FontSize="24" HorizontalAlignment="Right" ></TextBlock>
                                    </StackPanel>
                                    <Border Style="{StaticResource BorderKey}" Width="80" HorizontalAlignment="Left" CornerRadius="23" >
                                        <TextBlock Text="Info" Grid.Column="1" 
                                             Background="Transparent" Style="{StaticResource textBlockkey}"  Cursor="Hand" FontSize="18" TextAlignment="Center"  Padding="25 10"
                                              Margin="0 0 10 0"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Grid>
        </StackPanel>
        <Border Grid.Row="1" Grid.Column="1"  Background="#FF654949" CornerRadius="25" Margin="0 0 0 40" Height="60" Width="200" VerticalAlignment="Bottom" >
            <Button Click="AddStudent" x:Name="AddStudentBtn" Style="{StaticResource BtnKey}" Content="Add Student" BorderThickness="0"   FontSize="24" FontWeight="Medium"/>
        </Border>
    </Grid>
</Window>