<Window x:Class="Intrface.E_Day.AddSession"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intrface.E_Day"
        mc:Ignorable="d"
        Title="AddSession"  Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="ClassButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Background" Value="#4267B2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                             CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ClassAddSeesionButtonStyle" >
            <Setter Property="Control.Background" Value="#4267B2"/>
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.FontSize" Value="16"/>
            <Setter Property="Control.Padding" Value="10,5"/>
        </Style>

        <Style x:Key="CheckBoxStyle" >
            <Setter Property="Control.Margin" Value="0 15"></Setter>
            <Setter Property="Control.Foreground" Value="#FF5F5050"></Setter>
            <Setter Property="Control.FontSize" Value="13"></Setter>
            <Setter Property="Control.VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Control.HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Control.Background" Value="#4267B2"></Setter>
            <Setter Property="Control.RenderTransform">
                <Setter.Value >
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"></ScaleTransform>
                </Setter.Value>
            </Setter>
        </Style>

            <Style x:Key="PopupButtonStyle" >
                <Setter Property="Control.Background" Value="#4267B2"/>
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.FontSize" Value="16"/>
            <Setter Property="Control.Padding" Value="15,8"/>
        </Style>
        </Window.Resources>




    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4267B2" Margin="10 0 " CornerRadius="10">
            <Grid>
                <Button HorizontalAlignment="Left" 
                        Margin="20,0,0,0"
                        Width="40" Height="40"
                        Background="Transparent"
                        BorderThickness="0" Click="BackToLastScreen">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="40" Height="40" Fill="White" Margin="-2,-2,0,0"/>
                            <Polyline Points="27,15 15,20 27,27  " StrokeThickness="2" Stroke="#4267B2" Margin="-2,-2,2,2" />
                        </Grid>
                    </Button.Content>
                </Button>

                <TextBlock x:Name="HeaderText" Text="Arak"
                         Foreground="White"
                         FontSize="36"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                        Margin="0,0,20,0"
                        Background="White"
                        CornerRadius="15" Height="35"
                        Padding="10,5">
                    <Button Click="BackButtonClick" Foreground="#4267B2" 
                            BorderBrush="Transparent" Background="Transparent" 
                            FontSize="16" FontWeight="Bold" >Home</Button>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Student Attending:"
            FontSize="24"
            FontWeight="SemiBold"
            Margin="0,0,0,20"/>

            <!-- Student checkBox -->
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="CheckBoxesContainerForSubject" Margin="30 50 0 0 ">
                  
                </StackPanel>
            </ScrollViewer>


            <Grid Grid.Column="1" Width="300" HorizontalAlignment="Left" Margin="40,0,0,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Teacher:"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Margin="0,0,20,20"
                           VerticalAlignment="Center"/>

                <ComboBox Grid.Row="1" Height="40" VerticalAlignment="Top" 
                      x:Name="TeacherComboBox"
                      IsEditable="True" 
                      IsTextSearchEnabled="True"
                      TextSearch.TextPath="Name"
                      SelectedValuePath="SubjectId" Foreground="#4267B2" FontSize="20" >


                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Right"
                           Foreground="#4267B2" FontSize="20"
                           Padding="10"/>
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Grid.Row="2"
                x:Name="AddSessionButton" Height="40" FontSize="20"
                Content="Add session"
                Style="{StaticResource ClassAddSeesionButtonStyle}"
                Margin="20,0,0,0" Click="AddSessionButton_Click"/>
            </Grid>
        </Grid>
        
        <!--Confirmation PopUp-->
        <Popup IsOpen="False" Placement="Center" x:Name="ConfirmationPopUp"  >
            <Grid  Background="#FFF4F4F4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" 
                       Text="Are you sure to add this session?"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Margin="20" Foreground="#FF392F2F"/>

                <ListBox x:Name="StudentsInSessionInPopUp"  Grid.Row="1" Grid.RowSpan="2"  Background="Transparent"  BorderThickness="0" >
                            <ListBox.ItemTemplate >
                            <DataTemplate >
                            <StackPanel Width="200" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="#4267B2" Margin="5 5" HorizontalAlignment="Right"></TextBlock>
                             </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                <StackPanel Grid.Row="1" Grid.Column="1"  Width="250"
                        
                        Margin="0,20,0,0">
                    <TextBlock x:Name="SubjectInPopUp" Margin="5 5" FontSize="24" Foreground="#4267B2" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TeacherInPopUp" Margin="5 5" FontSize="24" Foreground="#4267B2" HorizontalAlignment="Center"/>
                </StackPanel>


                <StackPanel Grid.Row="2" Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,20">
                        <Button Content="Sure!" Click="ConfirmAddSession"
                        Margin="10,0"
                        Style="{StaticResource PopupButtonStyle}"/>
                        <Button Content="Cancel" Click="CancelAddSession"
                        Margin="10,0"
                        Style="{StaticResource PopupButtonStyle}"/> 
                    </StackPanel>
                </Grid>
            </Popup> 
        
    </Grid>
</Window>
