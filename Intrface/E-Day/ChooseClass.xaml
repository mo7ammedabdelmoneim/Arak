<Window x:Class="Intrface.E_Day.ChooseClass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intrface.E_Day"
        mc:Ignorable="d"
         Title="Choose Class" Height="600" Width="900"
     WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <Style  x:Key="BtnKey">
            <Style.Setters>
                <Setter Property="Control.Foreground" Value="white"></Setter>
                <Setter Property="Control.Background" Value="Transparent"></Setter>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="Control.IsMouseOver" Value="True">
                    <Setter Property="Control.Foreground" Value="Blue"></Setter>
                    <Setter Property="Control.Background" Value="White"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4267B2" Margin="10 0 " CornerRadius="10">
            <Grid>
                <Button HorizontalAlignment="Left" 
                        Margin="20,0,0,0"
                        Width="40" Height="40"
                        Background="Transparent"
                        BorderThickness="0" Click="BackButtonClick"
                         > 
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="40" Height="40" Fill="White" Margin="-2,-2,0,0"/>
                            <Polyline Points="27,15 15,20 27,27  " StrokeThickness="2" Stroke="#4267B2" Margin="-2,-2,2,2" />
                        </Grid>
                    </Button.Content>
                </Button>

                <TextBlock Text="Arak"
                         Foreground="White"
                         FontSize="36"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                        Margin="0,0,20,0"
                        Background="White"
                        CornerRadius="15" Height="35"
                        Padding="10,5">
                    <Button Click="BackButtonClick" Foreground="#4267B2" 
                            BorderBrush="Transparent" Background="Transparent" 
                            FontSize="16" FontWeight="Bold" >Home</Button>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Choose Class:"
                     FontSize="32"
                     FontWeight="SemiBold"
                     Margin="0,0,0,30"/>

            <!-- Classes Grid -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Class Buttons -->
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="0" Grid.Row="0">
                    <Button Click="OpenInsideClass" x:Name="Btn1" Style="{StaticResource BtnKey}"  Content="class"  BorderThickness="0"   FontSize="24"/>
                </Border>
                    
                        
                
                <!-- Repeat for remaining buttons -->
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="1" Grid.Row="0">
                    <Button Click="OpenInsideClass" x:Name="Btn2" Style="{StaticResource BtnKey}"  Content="class" Background="Transparent" BorderThickness="0"   FontSize="24"/>
                </Border>
                
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="2" Grid.Row="0">
                    <Button Click="OpenInsideClass" x:Name="Btn3" Style="{StaticResource BtnKey}"  Content="class" Background="Transparent" BorderThickness="0"   FontSize="24"/>
                </Border>
                
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="0" Grid.Row="1">
                    <Button Click="OpenInsideClass" x:Name="Btn4" Style="{StaticResource BtnKey}"  Content="class" Background="Transparent" BorderThickness="0"   FontSize="24"/>
                </Border>
                
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="1" Grid.Row="1">
                    <Button Click="OpenInsideClass" x:Name="Btn5" Style="{StaticResource BtnKey}"  Content="class" Background="Transparent" BorderThickness="0"   FontSize="24"/>
                </Border>
                
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="2" Grid.Row="1">
                    <Button Click="OpenInsideClass" x:Name="Btn6" Style="{StaticResource BtnKey}"  Content="class" Background="Transparent" BorderThickness="0"   FontSize="24"/>
                </Border>
                
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="0" Grid.Row="2">
                    <Button Click="OpenInsideClass" x:Name="Btn7" Style="{StaticResource BtnKey}"  Content="class" Background="Transparent" BorderThickness="0"   FontSize="24"/>
                </Border>
                
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="1" Grid.Row="2">
                    <Button Click="OpenInsideClass" x:Name="Btn8" Style="{StaticResource BtnKey}"  Content="class" Background="Transparent" BorderThickness="0"   FontSize="24"/>
                </Border>
                
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="2" Grid.Row="2">
                    <Button Click="OpenInsideClass" x:Name="Btn9" Style="{StaticResource BtnKey}"  Content="class" Background="Transparent" BorderThickness="0"   FontSize="24"/>
                </Border>
                
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="0" Grid.Row="3">
                    <Button Click="OpenInsideClass" x:Name="Btn10" Style="{StaticResource BtnKey}"  Content="class" Background="Transparent" BorderThickness="0"   FontSize="24"/>
                </Border>
                
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="1" Grid.Row="3">
                    <Button Click="OpenInsideClass" x:Name="Btn11" Style="{StaticResource BtnKey}"  Content="class" Background="Transparent" BorderThickness="0"   FontSize="24"/>
                </Border>
                
                <Border  Background="#4267B2" CornerRadius="25" Margin="10"  Grid.Column="2" Grid.Row="3">
                    <Button Click="OpenInsideClass" x:Name="Btn12" Style="{StaticResource BtnKey}"  Content="class" Background="Transparent" BorderThickness="0"   FontSize="24"/>
                </Border>
             </Grid>
        </Grid>
    </Grid>
</Window>
