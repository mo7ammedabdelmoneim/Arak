<Window x:Class="Intrface.E_Day.ClassAttendance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intrface.E_Day"
        mc:Ignorable="d"
        Title="Student Attending" Height="670" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="ClassButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Background" Value="#4267B2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="53"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                             CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF80A2E6"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CheckBoxStyle" >
            <Setter Property="Control.Margin" Value="0 15"></Setter>
            <Setter Property="Control.Foreground" Value="#FF5F5050"></Setter>
            <Setter Property="Control.FontSize" Value="13"></Setter>
            <Setter Property="Control.VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Control.HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Control.Background" Value="#4267B2"></Setter>
            <Setter Property="Control.RenderTransform">
                <Setter.Value >
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"></ScaleTransform>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4267B2" Margin="10 0 " CornerRadius="10">
            <Grid>
                <Button HorizontalAlignment="Left" 
                        Margin="20,0,0,0"
                        Width="40" Height="40"
                        Background="Transparent"
                        BorderThickness="0" Click="BackToLastScreen">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="40" Height="40" Fill="White" Margin="-2,-2,0,0"/>
                            <Polyline Points="27,15 15,20 27,27  " StrokeThickness="2" Stroke="#4267B2" Margin="-2,-2,2,2" />
                        </Grid>
                    </Button.Content>
                </Button>

                <TextBlock x:Name="HeaderText" Text="Arak"
                         Foreground="White"
                         FontSize="36"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                        Margin="0,0,20,0"
                        Background="White"
                        CornerRadius="15" Height="35"
                        Padding="10,5">
                    <Button Click="BackButtonClick" Foreground="#4267B2" 
                            BorderBrush="Transparent" Background="Transparent" 
                            FontSize="16" FontWeight="Bold" >Home</Button>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Student Attending:"
            FontSize="24"
            FontWeight="SemiBold"
            Margin="0,0,0,20"/>

            <!-- Student List -->

            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="CheckBoxesContainer" Margin="30 50 0 0 ">
                      
                </StackPanel>
            </ScrollViewer>

            <!-- Class Buttons -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

               
                <StackPanel Grid.Row="1" Width="270" HorizontalAlignment="Right" Margin="0 20 ">
                    <Button x:Name="btnSub1" Visibility="Collapsed" 
                            Style="{StaticResource ClassButtonStyle}" Click="SubjectSession" />
                    <Button  x:Name="btnSub2" Visibility="Collapsed"
                            Style="{StaticResource ClassButtonStyle}" Click="SubjectSession"/>
                    <Button  x:Name="btnSub3" Visibility="Collapsed"
                            Style="{StaticResource ClassButtonStyle}" Click="SubjectSession" />
                    <Button  x:Name="btnSub4" Visibility="Collapsed"
                             Style="{StaticResource ClassButtonStyle}" Click="SubjectSession"/>
                    <Button  x:Name="btnSub5" Visibility="Collapsed"
                            Style="{StaticResource ClassButtonStyle}" Click="SubjectSession" />
                    <Button  x:Name="btnSub6" Visibility="Collapsed"
                             Style="{StaticResource ClassButtonStyle}" Click="SubjectSession"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>

   
</Window>
