<Window x:Class="Intrface.MonthExams.AddExam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intrface.MonthExams"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="AddExam" Height="550" Width="800">
    <Window.Resources>
        <Style x:Key="SearchBtnkey">
            <Style.Setters>
                <Setter Property="Control.Foreground"  Value="#4267B2" ></Setter>
                <Setter Property="Control.Background"  Value="Transparent" ></Setter>
                <Setter Property="Control.FontSize"  Value="24" ></Setter>
                <Setter Property="Control.FontWeight"  Value="Bold" ></Setter>
            </Style.Setters>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4267B2" Margin="10 0 " CornerRadius="10">
            <Grid>
                <Button HorizontalAlignment="Left" 
        Margin="20,0,0,0"
        Width="40" Height="40"
        Background="Transparent"
        BorderThickness="0" Click="BackToLastScreen">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="40" Height="40" Fill="White" Margin="-2,-2,0,0"/>
                            <Polyline Points="27,15 15,20 27,27  " StrokeThickness="2" Stroke="#4267B2" Margin="-2,-2,2,2" />
                        </Grid>
                    </Button.Content>
                </Button>

                <TextBlock x:Name="HeaderText" Text="Arak"
         Foreground="White"
         FontSize="36"
         FontWeight="Bold"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
        Margin="0,0,20,0"
        Background="White"
        CornerRadius="15" Height="35"
        Padding="10,5">
                    <Button Click="BackButtonClick" Foreground="#4267B2" 
            BorderBrush="Transparent" Background="Transparent" 
            FontSize="16" FontWeight="Bold" >Home</Button>
                </Border>
            </Grid>
        </Border>

         <!--Content-->
        <StackPanel Grid.Row="2" Margin="0,40,20,0" Width="300" HorizontalAlignment="Center">
            <TextBlock Text="Subject" FontSize="26" FontWeight="Medium" Margin="0,0,0,10" Foreground="#FF5E5E5E"/>
            <ComboBox Text="Choose a Subject..."  Width="300" Margin="0 0 0 10" 
                    IsEditable="True" x:Name="SubjectCBox" 
                    IsTextSearchEnabled="True" BorderThickness="2"
                    TextSearch.TextPath="Name" GotFocus="SubjectCBox_GotFocus"
                    LostFocus="SubjectCBox_LostFocus" 
                    Height="45"  FontSize="16" Foreground="gray" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5 10" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Right"  FontSize="18"
                                    Padding="10"/>
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Month" FontSize="26" FontWeight="Medium" Margin="0,10,0,10" Foreground="#FF5E5E5E"/>
            <ComboBox Text="Choose a Month..."  Width="300" Margin="0 0 0 20"
                      x:Name="MonthCBox" IsEditable="True"
                     IsTextSearchEnabled="True" BorderThickness="2"
                     TextSearch.TextPath="Name" GotFocus="MonthCBox_GotFocus"
                     LostFocus="MonthCBox_LostFocus" 
                     Height="45"  FontSize="18" Foreground="gray" 
                     HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5 8" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Right"  FontSize="18"
                                Padding="10"/>
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>

            </ComboBox>

            <Grid  Margin="0 0 0 40">
                <TextBlock Text="Mark" Height="30"   FontSize="26" FontWeight="Medium" Margin="0,0,0,10" Foreground="#FF5E5E5E"/>
                <Border CornerRadius="20" Width="130"  HorizontalAlignment="Right"  BorderBrush="Gray" BorderThickness="1" >
                    <TextBox Padding="10 0" x:Name="GradeTBox" Height="25" Width="120" HorizontalAlignment="Center" BorderThickness="0" Margin="0,7,0,7" 
                             FontSize="18" Foreground="Gray" FontWeight="Medium" ></TextBox>
                </Border>
            </Grid>

            <Button  Height="45"  Name="AddExamBtn" Click="AddExam_Click"
             BorderThickness="0" Background="Transparent"
                Padding="0,0" HorizontalAlignment="Center"  >
                <Button.Content>
                    <Border  CornerRadius="15"  HorizontalAlignment="Left" Width="130" Height="45"
                 BorderBrush="#4267B2" BorderThickness="1" >
                        <TextBlock Text="Add" FontSize="20" FontWeight="Medium" HorizontalAlignment="Center" 
                        Style="{StaticResource SearchBtnkey}" VerticalAlignment="Center"></TextBlock>
                    </Border>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>
