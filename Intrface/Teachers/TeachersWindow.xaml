<Window x:Class="Intrface.Teachers.TeachersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intrface.Teachers"
        mc:Ignorable="d"
        Title="Teachers"  Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="white" >
    <Window.Resources>
        <Style x:Key="SearchBtnkey">
            <Style.Setters>
                <Setter Property="Control.Foreground"  Value="#4267B2" ></Setter>
                <Setter Property="Control.Background"  Value="Transparent" ></Setter>
                <Setter Property="Control.FontSize"  Value="24" ></Setter>
                <Setter Property="Control.FontWeight"  Value="Bold" ></Setter>
            </Style.Setters>
        </Style>
        <Style x:Key="SearchBtnBorderkey">
            <Style.Setters>
                <Setter Property="Control.Foreground"  Value="#4267B2" ></Setter>
                <Setter Property="Control.Background"  Value="Transparent" ></Setter>
                <Setter Property="Control.FontSize"  Value="24" ></Setter>
                <Setter Property="Control.FontWeight"  Value="Bold" ></Setter>
            </Style.Setters>
        </Style>
        <Style  x:Key="BorderKey">
            <Style.Setters>
                <Setter Property="Control.BorderBrush" Value="Transparent"></Setter>
                <Setter Property="Control.BorderThickness" Value="0"></Setter>
                <Setter Property="Control.Background" Value="#4267B2"></Setter>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="Control.IsMouseOver" Value="True">
                    <Setter Property="Control.Background" Value="White"></Setter>
                    <Setter Property="Control.BorderThickness" Value="1.5"></Setter>
                    <Setter Property="Control.BorderBrush" Value="#4267B2"></Setter>
                    <Setter Property="Control.Foreground" Value="#4267B2"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style  x:Key="textBlockkey">
            <Style.Setters>
                <Setter Property="Control.Foreground" Value="White"></Setter>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="Control.IsMouseOver" Value="True">
                    <Setter Property="Control.Foreground" Value="#4267B2"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4267B2" Margin="10,0,10,0" CornerRadius="10" Grid.ColumnSpan="2">
            <Grid>
                <Button HorizontalAlignment="Left" 
                 Margin="20,0,0,0"
                 Width="40" Height="40"
                 Background="Transparent"
                 BorderThickness="0" Click="BackButtonClick">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="40" Height="40" Fill="White" Margin="-2,-2,0,0" HorizontalAlignment="Left"/>
                            <Polyline Points="27,15 15,20 27,27  " StrokeThickness="2" Stroke="#4267B2" Margin="-2,-2,2,2" />
                        </Grid>
                    </Button.Content>
                </Button>

                <TextBlock x:Name="HeaderText" Text="Arak"
                  Foreground="White"
                  FontSize="36"
                  FontWeight="Bold"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                 Margin="0,0,20,0"
                 Background="White"
                 CornerRadius="15" Height="35"
                 Padding="10,5">
                    <Button Click="BackButtonClick" Foreground="#4267B2" 
                     BorderBrush="Transparent" Background="Transparent" 
                     FontSize="16" FontWeight="Bold" Height="25" VerticalAlignment="Top" >Home</Button>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Margin="0,10,0,10" Grid.Row="1" Grid.ColumnSpan="2">

            <ComboBox Width="450" Text="Search For Teacher..."  
                      IsEditable="True" x:Name="SearchForTeacherCBox"
                        IsTextSearchEnabled="True" BorderThickness="2"
                        TextSearch.TextPath="Name" GotFocus="SearchForTeacherCBox_GotFocus"
                      LostFocus="SearchForTeacherCBox_LostFocus" BorderBrush="#4267B2"
                      Height="50" Margin="95,20,0,20" FontSize="18" Foreground="gray" 
                      HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5 10" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Right"  FontSize="18"
                               Padding="10"/>
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


            <Button  Height="50" Grid.Column="2" Name="SearchBtn" Click="SearchBtn_Click"
                        BorderThickness="0" Background="Transparent"
                     Padding="0,0" HorizontalAlignment="Right" Margin="0 0 40 0" >
                <Button.Content>
                    <Border  CornerRadius="15,15,15,15"  HorizontalAlignment="Left" Width="150" Height="50"
                            BorderBrush="#4267B2" BorderThickness="2" >
                        <TextBlock Text="Search" HorizontalAlignment="Center" 
                                   Style="{StaticResource SearchBtnkey}" VerticalAlignment="Center"></TextBlock>
                    </Border>
                </Button.Content>
            </Button>
        </Grid>

        <StackPanel Grid.Row="2" Margin="20,0,20,20" Grid.ColumnSpan="2">
            <!-- teachers List -->
            <TextBlock Text="Teahers:" FontSize="35" FontWeight="Medium" Margin="0,0,0,20"/>

            <!-- Left Side - teachers List -->
            <StackPanel Margin="40 0 0 0 ">
                <ListView x:Name="ListOfTeachers" Grid.Column="0" Height="350"  HorizontalAlignment="Left" ScrollViewer.VerticalScrollBarVisibility="Hidden"
                            SelectedIndex="0" BorderThickness="0" d:ItemsSource="{d:SampleData ItemCount=5}"  BorderBrush="White"  SelectionChanged="ListOfTeachers_SelectionChanged">
                    <ListView.ItemTemplate  >
                        <DataTemplate>
                            <Grid  Margin=" 0 10" Width="400" >
                                <StackPanel  HorizontalAlignment="Right">
                                    <TextBlock x:Name="TeacherInfoIdentifier" Text="{Binding Name}" FontSize="24" HorizontalAlignment="Right" ></TextBlock>
                                </StackPanel>
                                <Border Style="{StaticResource BorderKey}" Width="80" HorizontalAlignment="Left" CornerRadius="23" >
                                    <TextBlock Text="Info" Grid.Column="1" 
                                  Background="Transparent" Style="{StaticResource textBlockkey}"  Cursor="Hand" FontSize="18" TextAlignment="Center"  Padding="25 10"
                                   Margin="0 0 10 0"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
