                         Foreground="Gray" FontSize="20" FontWeight="Medium" Margin="0 10"/>

                    <TextBlock Text="Address" Name="Address" 
                         Foreground="Gray" FontSize="20" FontWeight="Medium" Margin="0 10"/>

                    <TextBlock Text="Faculty" Name="Faculty" 
                         Foreground="Gray" FontSize="20" FontWeight="Medium" Margin="0 10"/>

                    <TextBlock Text="Phone" Name="Phone" 
                         Foreground="Gray" FontSize="20" FontWeight="Medium" Margin="0 10 0 20"/>



                    <StackPanel Orientation="Horizontal" Margin=" 0 50 0 0"  >
