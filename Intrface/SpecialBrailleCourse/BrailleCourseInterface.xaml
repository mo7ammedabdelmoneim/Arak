<Window x:Class="Intrface.SpecialBrailleCourse.BrailleCourseInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intrface.SpecialBrailleCourse"
        mc:Ignorable="d"
        Title="BrailleCourseInterface" WindowStartupLocation="CenterScreen" Height="600" Width="900">
    <Window.Resources>
        <Style x:Key="MainBorderButtonStyleKey">
            <Style.Setters>
                <Setter Property="Border.Background" Value="#4267B2"></Setter>
                <Setter Property="Border.BorderThickness" Value="0"></Setter>
                <Setter Property="Border.BorderBrush" Value="Transparent"></Setter>
                <Setter Property="Border.CornerRadius" Value="20"></Setter>
                <Setter Property="Border.Margin" Value="0 10"></Setter>
            </Style.Setters>
        </Style>
        <Style x:Key="MainButtonStyleKey">
            <Style.Setters>
                <Setter Property="Control.Background" Value="Transparent"></Setter>
                <Setter Property="Control.Foreground" Value="White"></Setter>
                <Setter Property="Control.BorderThickness" Value="0"></Setter>
                <Setter Property="Control.BorderBrush" Value="Transparent"></Setter>
                <Setter Property="Control.FontSize" Value="24"></Setter>
                <Setter Property="Control.FontWeight" Value="Medium"></Setter>
                <Setter Property="Control.Height" Value="50"></Setter>
            </Style.Setters>
        </Style>

    </Window.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4267B2" Margin="10,0,10,0" CornerRadius="10" Grid.ColumnSpan="2">
            <Grid>
                <Button HorizontalAlignment="Left" 
                 Margin="20,0,0,0"
                 Width="40" Height="40"
                 Background="Transparent"
                 BorderThickness="0" Click="BackButtonClick">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="40" Height="40" Fill="White" Margin="-2,-2,0,0" HorizontalAlignment="Left"/>
                            <Polyline Points="27,15 15,20 27,27  " StrokeThickness="2" Stroke="#4267B2" Margin="-2,-2,2,2" />
                        </Grid>
                    </Button.Content>
                </Button>

                <TextBlock x:Name="HeaderText" Text="Arak"
                  Foreground="White"
                  FontSize="36"
                  FontWeight="Bold"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                 Margin="0,0,20,0"
                 Background="White"
                 CornerRadius="15" Height="35"
                 Padding="10,5">
                    <Button Click="BackButtonClick" Foreground="#4267B2" 
                     BorderBrush="Transparent" Background="Transparent" 
                     FontSize="16" FontWeight="Bold" Height="25" VerticalAlignment="Top" >Home</Button>
                </Border>
            </Grid>
        </Border>

        <!--Content-->
        <StackPanel Grid.Row="1" Margin="10,10,20,20" Grid.ColumnSpan="2">
            <!-- teachers List -->
            <TextBlock Text="Courses:" FontSize="35" FontWeight="Regular" Margin="30,0,0,0"/>

            <Grid Margin="0 0 0 15">
                <TextBlock FontWeight="Medium" Text= "الطالب" FontSize="24"  Margin="0 0 60 0" HorizontalAlignment="Right" ></TextBlock>
                <TextBlock FontWeight="Medium" Text= "المدرب" FontSize="24"  Margin="0 0 360 0" HorizontalAlignment="Right"></TextBlock>
            </Grid>

            <!-- Left Side - teachers List -->
            <Grid >
                <ListView Margin="0 0 0 0" x:Name="ListOfBrailleCourses" Grid.Column="0" Height="300"  HorizontalAlignment="Left" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                            SelectedIndex="0" BorderThickness="0" d:ItemsSource="{d:SampleData ItemCount=5}"  BorderBrush="White" SelectionChanged="ListOfBrailleCourses_SelectionChanged" >
                    <ListView.ItemTemplate  >
                        <DataTemplate>
                            <Grid  Margin=" 0 10" Width="850" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="2" Foreground="#FF585858" FontWeight="Regular" Text="{Binding StudentName}" FontSize="24" HorizontalAlignment="Right" Margin="0 0 30 0"></TextBlock>
                                <TextBlock Grid.Column="1" Foreground="#FF585858" FontWeight="Regular" Text="{Binding TeacherName}" FontSize="24" HorizontalAlignment="Right"  ></TextBlock>
                                <Grid>
                                    <TextBlock  FontSize="20" Foreground="#4267B2" Text="{Binding State}"  HorizontalAlignment="Right" ></TextBlock>
                                    <TextBlock  FontSize="24" Foreground="#FF585858" Text="{Binding SessionsNumber}" FontWeight="Medium" Margin="50 0"  HorizontalAlignment="Left" ></TextBlock>

                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>
            <StackPanel>
                <Border Width="230" HorizontalAlignment="Left" VerticalAlignment="Bottom"   Style="{StaticResource MainBorderButtonStyleKey}"  Margin="50 0" CornerRadius="12" >
                    <Button Content="Add New Course" Style="{StaticResource MainButtonStyleKey }" Click="AddNewCourse_Click" />
                </Border>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
