<Window x:Class="Intrface.SpecialBrailleCourse.AddNewCourse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intrface.SpecialBrailleCourse"
        mc:Ignorable="d"
        Title="AddNewCourse" WindowStartupLocation="CenterScreen" Height="550" Width="700">
    <Window.Resources>
        <Style x:Key="SearchBtnkey">
            <Style.Setters>
                <Setter Property="Control.Foreground"  Value="White" ></Setter>
                <Setter Property="Control.Background"  Value="#4267B2" ></Setter>
                <Setter Property="Control.FontSize"  Value="24" ></Setter>
                <Setter Property="Control.FontWeight"  Value="Bold" ></Setter>
            </Style.Setters>
        </Style>
        <Style x:Key="MainBorderButtonStyleKey">
            <Style.Setters>
                <Setter Property="Border.Background" Value="#4267B2"></Setter>
                <Setter Property="Border.BorderThickness" Value="0"></Setter>
                <Setter Property="Border.BorderBrush" Value="Transparent"></Setter>
                <Setter Property="Border.CornerRadius" Value="20"></Setter>
                <Setter Property="Border.Margin" Value="0 10"></Setter>
            </Style.Setters>
        </Style>
        <Style x:Key="MainButtonStyleKey">
            <Style.Setters>
                <Setter Property="Control.Background" Value="Transparent"></Setter>
                <Setter Property="Control.Foreground" Value="White"></Setter>
                <Setter Property="Control.BorderThickness" Value="0"></Setter>
                <Setter Property="Control.BorderBrush" Value="Transparent"></Setter>
                <Setter Property="Control.FontSize" Value="24"></Setter>
                <Setter Property="Control.FontWeight" Value="Medium"></Setter>
                <Setter Property="Control.Height" Value="50"></Setter>
            </Style.Setters>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#4267B2" Margin="10,0,10,0" CornerRadius="10" Grid.ColumnSpan="2">
            <Grid>
                <Button HorizontalAlignment="Left" 
          Margin="20,0,0,0"
          Width="40" Height="40"
          Background="Transparent"
          BorderThickness="0" Click="BackToLastScreen">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="40" Height="40" Fill="White" Margin="-2,-2,0,0" HorizontalAlignment="Left"/>
                            <Polyline Points="27,15 15,20 27,27  " StrokeThickness="2" Stroke="#4267B2" Margin="-2,-2,2,2" />
                        </Grid>
                    </Button.Content>
                </Button>

                <TextBlock x:Name="HeaderText" Text="Arak"
           Foreground="White"
           FontSize="36"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
          Margin="0,0,20,0"
          Background="White"
          CornerRadius="15" Height="35"
          Padding="10,5">
                    <Button Click="BackButtonClick" Foreground="#4267B2" 
              BorderBrush="Transparent" Background="Transparent" 
              FontSize="16" FontWeight="Bold" Height="25" VerticalAlignment="Top" >Home</Button>
                </Border>
            </Grid>
        </Border>

        <!--Content-->
        <StackPanel Grid.Row="1" Margin="200 50 0 50" Width="500">
            <TextBlock HorizontalAlignment="left" Name="Student" Text="Student" FontWeight="Medium" Foreground="#FF585858" FontSize="28"/>
            <TextBox HorizontalAlignment="Left" Width="300" x:Name="LearnerName" FontSize="18" Margin="0 10" Foreground="#FF585858" Padding="10 5" FontWeight="Regular"></TextBox>

            <TextBlock Margin="0,20,0,10" HorizontalAlignment="left"  Text="Instructor" FontWeight="Medium" Foreground="#FF585858" FontSize="28"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox Width="300" Text="Choose an Instructor..."  
                       IsEditable="True" x:Name="SearchForTeacherCBox"
                         IsTextSearchEnabled="True" BorderThickness="2"
                         TextSearch.TextPath="Name" GotFocus="SearchForTeacherCBox_GotFocus"
                       LostFocus="SearchForTeacherCBox_LostFocus" BorderBrush="#4267B2"
                       Height="50"  FontSize="18" Foreground="gray" 
                       HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5 10" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Right"  FontSize="18"
                         Padding="10"/>
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBox Visibility="Collapsed" HorizontalAlignment="Left" Width="300" x:Name="NewInstructorTBox" FontSize="18" Margin="0 10" Padding="10 5" Foreground="#FF585858" FontWeight="Regular"></TextBox>

                <Border x:Name="NewInstrutorBtn"  BorderBrush="#4267B2" Margin="20 10 0 10"  Width="115.5" BorderThickness="1.2" CornerRadius="10" HorizontalAlignment="Left">
                    <Button Content="New Instructor" Background="Transparent" Name="UploadImage"
                                Foreground="#4267B2" FontWeight="Medium" Click="AddNewInstructor_Click"  BorderThickness="0" Padding="15,5"/>
                </Border>

            </StackPanel>

           
            <Border Margin=" 0 50 200 0" Width="150"  HorizontalAlignment="Center" VerticalAlignment="Center"   Style="{StaticResource MainBorderButtonStyleKey}"  CornerRadius="12" >
                <Button Content="ADD" FontSize="28"  Style="{StaticResource MainButtonStyleKey }" Click="AddNewCourse_Click" />
            </Border>
        </StackPanel>
    </Grid>
</Window>