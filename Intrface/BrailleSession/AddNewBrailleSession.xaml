<Window x:Class="Intrface.BrailleSession.AddNewBrailleSession"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intrface.BrailleSession"
        mc:Ignorable="d"
        Title="AddNewBrailleSession" WindowStartupLocation="CenterScreen" Height="500" Width="800">
    <Window.Resources>
        <Style x:Key="SearchBtnkey">
            <Style.Setters>
                <Setter Property="Control.Foreground"  Value="White" ></Setter>
                <Setter Property="Control.Background"  Value="#4267B2" ></Setter>
                <Setter Property="Control.FontSize"  Value="24" ></Setter>
                <Setter Property="Control.FontWeight"  Value="Bold" ></Setter>
            </Style.Setters>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#4267B2" Margin="10,0,10,0" CornerRadius="10" Grid.ColumnSpan="2">
            <Grid>
                <Button HorizontalAlignment="Left" 
          Margin="20,0,0,0"
          Width="40" Height="40"
          Background="Transparent"
          BorderThickness="0" Click="BackToLastScreen">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="40" Height="40" Fill="White" Margin="-2,-2,0,0" HorizontalAlignment="Left"/>
                            <Polyline Points="27,15 15,20 27,27  " StrokeThickness="2" Stroke="#4267B2" Margin="-2,-2,2,2" />
                        </Grid>
                    </Button.Content>
                </Button>

                <TextBlock x:Name="HeaderText" Text="Arak"
           Foreground="White"
           FontSize="36"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
          Margin="0,0,20,0"
          Background="White"
          CornerRadius="15" Height="35"
          Padding="10,5">
                    <Button Click="BackButtonClick" Foreground="#4267B2" 
              BorderBrush="Transparent" Background="Transparent" 
              FontSize="16" FontWeight="Bold" Height="25" VerticalAlignment="Top" >Home</Button>
                </Border>
            </Grid>
        </Border>

        <!--Content-->
        <StackPanel Grid.Row="1" Margin="0 50" Width="300">
            <TextBlock HorizontalAlignment="Center" Name="StudentName" Text="Student Name" FontWeight="Medium" Foreground="#FF585858" FontSize="28"/>
            
            
            <ComboBox Width="300" Text="Search For Teacher..."  
                       IsEditable="True" x:Name="SearchForTeacherCBox"
                         IsTextSearchEnabled="True" BorderThickness="2"
                         TextSearch.TextPath="Name" GotFocus="SearchForTeacherCBox_GotFocus"
                       LostFocus="SearchForTeacherCBox_LostFocus" BorderBrush="#4267B2"
                       Height="50" Margin="0,40,0,20" FontSize="18" Foreground="gray" 
                       HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5 10" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Right"  FontSize="18"
                            Padding="10"/>
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button  Height="48"  Name="AddBrailleSession" Click="AddBrailleSession_Click"
                        BorderThickness="0" Background="Transparent" Margin=" 0 50 0 0"
                         HorizontalAlignment="Center"  >
                <Button.Content>
                    <Border  CornerRadius="15"  HorizontalAlignment="Center" Width="120" Height="45.95"
                     BorderBrush="#4267B2" BorderThickness="1" >
                        <TextBlock Text="ADD" FontSize="20" Foreground="#4267B2" FontWeight="Medium" HorizontalAlignment="Center" 
                     Style="{StaticResource SearchBtnkey}" VerticalAlignment="Center"></TextBlock>
                    </Border>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>
